{
  "name": "dev-rx-flashcard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "json-server": "^0.16.3",
    "node-sass": "4.14.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "server": "json-server --watch data/db.json --port 1337",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "fix-lint": "npm run fix-lint:js && npm run fix-lint:css",
    "fix-lint:css": "npm run lint:css -- --write",
    "fix-lint:js": "eslint --fix ./src/ --ext .js --ext .jsx",
    "lint:css": "prettier --single-quote -l './src/**/*.{css,scss}'",
    "lint:js": "eslint ./src/ --ext .js --ext .jsx",
    "lint:graphql-requests": "npm run download-schema && eslint ./src/ --ext .gql --ext .graphql --ext .js --ext .jsx --rule 'graphql/template-strings: [\"error\", {\"env\": \"apollo\",\"schemaJsonFilepath\": \"./hybris-schema.json\"}]'",
    "lint": "npm run lint:js && npm run lint:css",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
